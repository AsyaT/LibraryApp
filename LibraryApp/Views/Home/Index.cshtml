@{
    ViewBag.Title = "Library page";
   
}
@using LibraryApp.Models;
@model BookModel



<div class="row">
    <table>
        <tr>
            <td>@Model.Title</td>
            <td>
                @if (Model.Authors != null)
                {
                    foreach (AuthorModel author in Model.Authors)
                    {
                        <p>@author.FirstName @author.LastName</p>
                    }
                }
            </td>
            <td>@Model.NumberOfPages</td>
            <td>@Model.Publisher</td>
            <td>@Model.YearOfPublication.Year</td>
            <td>@Model.Image</td>
        </tr>

    </table>
</div>